{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://devops.finos.org/devops-automation/calm/core/0.0.1",
  "title": "Common Architecture Language Model",
  "type": "object",
  "definitions": {
    "node": {
      "type": "object",
      "properties": {
        "uniqueId": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/node-type"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "data-classification": {
          "$ref": "#/definitions/dataClassification"
        },
        "run-as": {
          "type": "string"
        },
        "instance": {
          "type": "string"
        }
      },
      "required": [
        "uniqueId",
        "type",
        "name",
        "description"
      ],
      "additionalProperties": false
    },
    "relationship": {
      "type": "object",
      "properties": {
        "uniqueId": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "parties": {
          "type": "object",
          "properties": {
            "actor": {
              "type": "string"
            },
            "nodes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "source": {
              "type": "string"
            },
            "destination": {
              "type": "string"
            },
            "container": {
              "type": "string"
            }
          },
          "required": []
        },
        "protocol": {
          "$ref": "#/definitions/protocol"
        },
        "authentication": {
          "$ref": "#/definitions/authentication"
        }
      },
      "required": [
        "uniqueId",
        "type",
        "parties"
      ]
    },
    "dataClassification": {
      "enum": [
        "Public",
        "Confidential",
        "Highly Restricted",
        "MNPI",
        "PII"
      ]
    },
    "protocol": {
      "enum": [
        "HTTP",
        "HTTPS",
        "FTP",
        "SFTP",
        "JDBC",
        "WebSocket",
        "SocketIO",
        "LDAP",
        "AMQP"
      ]
    },
    "authentication": {
      "enum": [
        "Basic",
        "OAuth2",
        "Kerberos",
        "SPNEGO",
        "SiteMinder/Isolated"
      ]
    },
    "node-type": {
      "enum": [
        "actor",
        "system",
        "service",
        "database",
        "internal-network",
        "ldap",
        "webclient"
      ]
    }
  },
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/node"
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/relationship"
      }
    }
  },
  "required": [
    "nodes",
    "relationships"
  ]
}